{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",

    "allowJs": true,
    "removeComments": true,
    "strict": true,

    "declaration": true,
    "declarationMap": true,

    "baseUrl": "./app",
    "rootDir": "./app",
    "outDir": "./build",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["./app/**/*"]
}
